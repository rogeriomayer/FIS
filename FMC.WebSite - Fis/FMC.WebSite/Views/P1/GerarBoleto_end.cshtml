@model IEnumerable<object>
@using Microsoft.AspNetCore.Http
@{
    FMC.Fis.Models.BilletRequest billetRequest = (FMC.Fis.Models.BilletRequest)Model.ElementAt(0);
    Layout = "_Admin";
}
<div class="g-hidden-sm-down g-bg-gray-light-v8 g-pa-20">
